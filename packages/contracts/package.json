{
  "name": "@autostream/contracts",
  "version": "1.0.0",
  "description": "AutoStream Smart Contracts for Massa",
  "private": true,
  "main": "build/main.js",
  "scripts": {
    "build": "mkdir -p build && echo 'Contract compilation requires Massa toolchain - see README'",
    "build:demo": "tsc assembly/contracts/StreamManagerClean.ts --outDir build --target ES2020",
    "build:simple": "tsc assembly/contracts/SimpleStreamManager.ts --outDir build --target ES2020",
    "build:all": "mkdir -p build && npm run build:demo && npm run build:simple",
    "test": "npm run build:all && node tests/contract-demo.js",
    "demo": "npm run build:demo && node tests/contract-demo.js",
    "deploy": "node scripts/deploy.js",
    "clean": "rm -rf build/"
  },
  "dependencies": {
    "@massalabs/massa-sc-utils": "^2.2.0"
  },
  "devDependencies": {
    "@massalabs/massa-sc-compiler": "^0.2.0",
    "@massalabs/massa-sc-deployer": "^2.2.0",
    "assemblyscript": "^0.27.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "build/**/*",
    "assembly/**/*"
  ]
}

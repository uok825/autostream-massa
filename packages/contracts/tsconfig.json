{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "outDir": "./build",
    "rootDir": "./assembly"
  },
  "include": ["assembly/**/*"],
  "exclude": ["node_modules", "build"]
}
